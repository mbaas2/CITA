<?xml version='1.1' encoding='UTF-8'?>
<flow-definition plugin="workflow-job@2.40">
  <actions>
    <org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobAction plugin="pipeline-model-definition@1.7.2"/>
    <org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobPropertyTrackerAction plugin="pipeline-model-definition@1.7.2">
      <jobProperties/>
      <triggers/>
      <parameters/>
      <options/>
    </org.jenkinsci.plugins.pipeline.modeldefinition.actions.DeclarativeJobPropertyTrackerAction>
  </actions>
  <description></description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <definition class="org.jenkinsci.plugins.workflow.cps.CpsFlowDefinition" plugin="workflow-cps@2.87">
    <script>
    pipeline {
      agent any
      options { 
        disableConcurrentBuilds() 
      }
      stages {
        stage ("Cleanup") {
          agent {
            label "mac&&18.2&&cita_latest"
          }
          steps {
            script {
              cleanWs()
              catchError(buildResult: "UNSTABLE", stageResult: "FAILURE") {
                def citaDEVT="/devt/"
                def folder = "%xinD%"
                echo "node=${env.NODE_NAME}"
                if ("${env.NODE_NAME}"=="mac3") {
                  citaDEVT = "/Volumes/devt"
                  echo "folder pre-replace: $folder"
                  folder= folder.replaceAll("(^|=)/devt/","\$1/Volumes/devt/") 
                  // folder.replaceAll("(?<![^=])/devt/","/Volumes/devt/")
                  echo "replaced in folder. new value is $folder"
                }
                path = "/Dyalog/Dyalog-18.2.app/Contents/Resources/Dyalog/mapl"
                exists = fileExists(path)      
                if (exists) {
                  echo "PLATFORM=mac, path=${path}: File exists!"
                } else {
                  echo "PLATFORM=mac, path=${path}: File does not exist, trying another path"
                  path = "/Applications/Dyalog-18.2.app/Contents/Resources/Dyalog/mapl"
                  exists = fileExists(path)          
                  if (exists) {
                    echo "PLATFORM=mac, path=${path}: File exists!"
                  } else {
                    error "PLATFORM=mac, path=${path}: File does not exist, giving it up!"
                  }
                }                
                echo "executing $path load=$citaDEVT/apltools/CITA/CITA-Tests/cleanup.aplf configfile=$citaDEVT/apltools/CITA/CITA-Tests/cleanup.dcfg FOLDER=$folder"              
                sh "$path load=$citaDEVT/apltools/CITA/CITA-Tests/cleanup.aplf configfile=$citaDEVT/apltools/CITA/CITA-Tests/cleanup.dcfg FOLDER=$folder"              

                // use this for AIX:
                //sh "/opt/mdyalog/18.2/64/unicode/p8/mapl load=$dvt/apltools/CITA/CITA-Tests/cleanup.aplf configfile=/devt/apltools/CITA/CITA-Tests/cleanup.dcfg FOLDER=%xinD%"              
                //sh "exit 0"  // end this step w/o problem-status, as it would avoid execution of next steps...
              }
           }
          }
        }
        stage ("Run Tests") {
          parallel {
            %STAGES%  
          }
        }
        stage ("Unlock") {
          agent {
            label "pi&&18.2&&cita_latest"  // do not run this on AIX
          }
          steps {
            script {
              catchError(buildResult: "UNSTABLE", stageResult: "FAILURE") {
                def LOCKFILE="%LOCKFILE%"
                if (LOCKFILE != "") {
                  sh "rm $LOCKFILE"
                }
              }
            } 
          }
        }
      }
    }
    </script>
    <sandbox>true</sandbox>
  </definition>
  <triggers/>
  <disabled>false</disabled>
</flow-definition>